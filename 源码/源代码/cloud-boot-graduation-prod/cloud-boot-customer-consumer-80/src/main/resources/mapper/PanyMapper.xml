<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fatcats.top.dao.PanyGoodsDao">


    <!--

     //查询所有的商家信息
    public List<PanyGoods> findAllPany();
    //新增商家信息
    public void addPany(PanyGoods panyGoods);
    //修改商家信息
    public void uptPany(PanyGoods panyGoods);
    //删除商家信息
    public void delPany(@Param("id") Integer id);
    //根据ID查询商家信息
    public PanyGoods findPanyByID(@Param("id") Integer id);

    -->
<select id="findAllPany" resultType="PanyGoods">

SELECT
pany_id , pany_name , pany_desc , pany_type
FROM
tb_pany

</select>


<insert id="addPany">

INSERT INTO
tb_pany
VALUES
(DEFAULT,#{pany_name},#{pany_desc},#{pany_type})

</insert>


<update id="uptPany">

UPDATE
tb_pany
SET
pany_name = #{pany_name},
pany_desc = #{pany_desc},
pany_type = #{pany_type}
WHERE
pany_id = #{pany_id}

</update>


<delete id="delPany">

DELETE FROM
tb_pany
WHERE
pany_id = #{id}

</delete>


<select id="findPanyByID" resultType="PanyGoods">

SELECT
pany_name,
pany_desc,
pany_type
FROM
tb_pany
WHERE
pany_id = #{id}

</select>
</mapper>